---
import { languageInfoData } from "./data";
interface Props {
  language: string;
}

const { language } = Astro.props;
const defaultLanguage = "default";
const info = languageInfoData[language] || languageInfoData[defaultLanguage];
---

<article class="container mx-auto px-4 py-16 max-w-7xl">
  <div class="prose prose-slate dark:prose-invert max-w-none space-y-12">
    <!-- Main Info Section -->
    <div class="space-y-6">
      <div class="flex items-center gap-3 pb-2 border-b border-border">
        <h2 class="text-2xl font-bold tracking-tight">About {info.title}</h2>
      </div>

      <p class="text-lg text-muted-foreground leading-relaxed">
        {info.description}
      </p>

      <div class="grid md:grid-cols-2 gap-8 mt-8">
        <div class="bg-card rounded-lg border border-border p-6 shadow-xs">
          <h3 class="text-lg font-semibold mb-4 flex items-center gap-2">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="text-primary"
            >
              <polyline points="20 6 9 17 4 12"></polyline>
            </svg>
            Key Features
          </h3>
          <ul class="space-y-3">
            {info.features.map((feature) => (
              <li class="flex items-start gap-2.5 text-sm text-muted-foreground">
                <span
                  class="mt-1.5 h-1.5 w-1.5 rounded-full bg-primary/60 shrink-0"
                />
                <span>{feature}</span>
              </li>
            ))}
          </ul>
        </div>

        <div class="bg-card rounded-lg border border-border p-6 shadow-xs">
          <h3 class="text-lg font-semibold mb-4 flex items-center gap-2">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="text-primary"
            >
              <circle cx="12" cy="12" r="10"></circle>
              <line x1="12" y1="16" x2="12" y2="12"></line>
              <line x1="12" y1="8" x2="12.01" y2="8"></line>
            </svg>
            Did you know?
          </h3>
          <ul class="space-y-3">
            {info.additional_info.map((info) => (
              <li class="flex items-start gap-2.5 text-sm text-muted-foreground">
                <span
                  class="mt-1.5 h-1.5 w-1.5 rounded-full bg-primary/60 shrink-0"
                />
                <span>{info}</span>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </div>

    <!-- Validator Section -->
    <div class="space-y-6 pt-8">
      <div class="flex items-center gap-3 pb-2 border-b border-border">
        <h2 class="text-2xl font-bold tracking-tight">
          {info.validator.title}
        </h2>
      </div>

      <div class="flex flex-col md:flex-row gap-8 items-start">
        <div class="flex-1 text-lg text-muted-foreground leading-relaxed">
          <p>{info.validator.description}</p>
        </div>

        <div class="flex-1 w-full bg-muted/30 rounded-lg p-6 border border-border/50">
          <h3 class="text-sm font-semibold uppercase tracking-wider text-muted-foreground mb-4">
            Capabilities
          </h3>
          <ul class="grid gap-3">
            {info.validator.features.map((feature) => (
              <li class="flex items-center gap-2.5 text-sm">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="16"
                  height="16"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="text-green-500 shrink-0"
                >
                  <polyline points="20 6 9 17 4 12"></polyline>
                </svg>
                <span>{feature}</span>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </div>
  </div>
</article>
