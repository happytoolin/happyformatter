---
import { languageInfoData } from "./data";
interface Props {
  language: string;
}

const { language } = Astro.props;
const defaultLanguage = "default";
const info = languageInfoData[language] || languageInfoData[defaultLanguage];
---

<section class="w-full border-t-2 border-foreground bg-background py-16">
  <div class="container mx-auto max-w-5xl px-4">
    <!-- Section Header -->
    <div class="mb-12 flex flex-col items-start gap-2">
      <div class="inline-flex items-center gap-2 border border-foreground bg-muted px-2 py-1 font-mono text-xs font-bold uppercase">
        <span class="h-2 w-2 bg-primary"></span>
        Technical Specifications
      </div>
      <h2 class="font-display text-4xl font-black uppercase md:text-5xl">
        {info.title} <span class="text-primary">//</span> DOCS
      </h2>
    </div>

    <!-- The Spec Sheet Grid -->
    <div class="border-2 border-foreground bg-card shadow-[8px_8px_0px_0px_var(--color-foreground)]">
      <!-- Description Panel -->
      <div class="border-b-2 border-foreground p-6 md:p-8">
        <h3 class="font-mono text-sm font-bold text-muted-foreground uppercase tracking-widest mb-4">
          01 // OVERVIEW
        </h3>
        <p class="font-sans text-lg leading-relaxed text-foreground">
          {info.description}
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2">
        <!-- Features Column -->
        <div class="border-b-2 md:border-b-0 md:border-r-2 border-foreground p-6 md:p-8 bg-muted/20">
          <h3 class="font-mono text-sm font-bold text-muted-foreground uppercase tracking-widest mb-6">
            02 // CAPABILITIES
          </h3>
          <ul class="space-y-4">
            {info.features.map((feature) => (
              <li class="flex items-start gap-3 text-sm font-mono">
                <span class="mt-1 text-primary">▶</span>
                <span>{feature}</span>
              </li>
            ))}
          </ul>
        </div>

        <!-- Additional Info Column -->
        <div class="p-6 md:p-8">
          <h3 class="font-mono text-sm font-bold text-muted-foreground uppercase tracking-widest mb-6">
            03 // REFERENCE DATA
          </h3>
          <ul class="space-y-4">
            {info.additional_info.map((item) => (
              <li class="flex items-start gap-3 text-sm font-mono text-muted-foreground">
                <span class="mt-1 h-1.5 w-1.5 shrink-0 bg-foreground"></span>
                <span>{item}</span>
              </li>
            ))}
          </ul>
        </div>
      </div>

      <!-- Validator Section (High Contrast) -->
      <div class="border-t-2 border-foreground bg-foreground text-background p-6 md:p-8">
        <div class="flex flex-col md:flex-row gap-8">
          <div class="md:w-1/3">
            <h3 class="font-display text-2xl font-bold uppercase text-primary mb-2">
              {info.validator.title}
            </h3>
            <p class="font-mono text-xs opacity-70">INTEGRITY CHECKER MODULE</p>
          </div>
          <div class="md:w-2/3">
            <p class="mb-4 font-bold">{info.validator.description}</p>
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
              {info.validator.features.map((feature) => (
                <div class="flex items-center gap-2 text-sm font-mono opacity-80 border border-white/20 p-2">
                  <span class="text-primary">✓</span> {feature}
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
