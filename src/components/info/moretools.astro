---
import LanguageIcon from "@/icons/languages/LanguageIcon.astro";

const tools = [
  { name: "HTML Formatter", url: "/html" },
  { name: "HTML Minifier", url: "/html" },
  { name: "CSS Formatter", url: "/css" },
  { name: "CSS Minifier", url: "/css" },
  { name: "JavaScript Formatter", url: "/javascript" },
  { name: "JavaScript Minifier", url: "/javascript" },
  { name: "JSON Formatter", url: "/json" },
  { name: "JSON Minifier", url: "/json" },
  { name: "XML Formatter", url: "/xml" },
  { name: "XML Minifier", url: "/xml" },
  { name: "YAML Formatter", url: "/yaml" },
  // { name: "TOML Formatter", url: "/toml" },
  { name: "SQL Formatter", url: "/sql" },
  { name: "Go Formatter", url: "/go" },
  { name: "Dart Formatter", url: "/dart" },
  { name: "SCSS Formatter", url: "/scss" },
  { name: "SCSS Minifier", url: "/scss" },
  { name: "Java Formatter", url: "/java" },
  { name: "Lua Formatter", url: "/lua" },
  { name: "Python Formatter", url: "/python" },
  { name: "TypeScript Formatter", url: "/typescript" },
  { name: "TypeScript Validator", url: "/typescript" },
  { name: "Markdown Formatter", url: "/markdown" },
  { name: "C# Formatter", url: "/csharp" },
  { name: "C Formatter", url: "/c" },
  { name: "C++ Formatter", url: "/cpp" },
  { name: "PHP Formatter", url: "/php" },
  { name: "Protobuf Formatter", url: "/proto" },
  { name: "Zig Formatter", url: "/zig" },
];
---

<div
  class="py-16 border-t border-border/40"
  id="more-tools"
>
  <div class="container mx-auto px-4">
    <div class="flex items-center gap-4 mb-8">
      <h2 class="text-2xl font-bold">
        All Tools
      </h2>
      <div class="h-px flex-1 bg-border"></div>
    </div>

    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-4">
      {tools.map((tool) => {
        return (
          <a
            href={tool.url}
            class="group flex items-center gap-3 p-3 rounded-lg border border-transparent hover:border-border hover:bg-muted/50 transition-all duration-200"
          >
            <div class="w-8 h-8 flex items-center justify-center rounded bg-muted group-hover:bg-background transition-colors">
              <LanguageIcon
                icon={tool.url.replace("/", "")}
                class="w-5 h-5 opacity-70 group-hover:opacity-100 transition-opacity"
              />
            </div>
            <span
              class="text-sm font-medium text-muted-foreground group-hover:text-foreground transition-colors"
            >{tool.name}</span>
          </a>
        );
      })}
    </div>
  </div>
</div>

<script>
document.addEventListener("DOMContentLoaded", () => {
  const tools = document.querySelectorAll(".tool");
  tools.forEach((tool) => {
    const toolName = tool.getAttribute("href")?.replace("/", "") || "";

    tool.addEventListener("mouseover", () => {
      gtag("event", `Mouse Over ${toolName}`, {
        "event_category": "Tool Interaction",
        "event_label": "Mouse Over",
        "value": toolName,
      });
    });

    tool.addEventListener("mouseleave", () => {
      gtag("event", `Mouse Leave ${toolName}`, {
        "event_category": "Tool Interaction",
        "event_label": "Mouse Leave",
        "value": toolName,
      });
    });

    tool.addEventListener("focus", () => {
      gtag("event", `Focus ${toolName}`, {
        "event_category": "Tool Interaction",
        "event_label": "Focus",
        "value": toolName,
      });
    });

    tool.addEventListener("click", () => {
      gtag("event", `Click ${toolName}`, {
        "event_category": "Tool Interaction",
        "event_label": "Click",
        "value": toolName,
      });
    });
  });
});
</script>
