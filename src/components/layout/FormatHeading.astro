---
import LanguageIcon from "@/icons/languages/LanguageIcon.astro";

interface Props {
  language: string;
  minify: boolean;
}

const { language, minify } = Astro.props;
---

<section class="relative w-full border-b-2 border-foreground bg-secondary/30 overflow-hidden py-20">
  <!-- Dynamic Background Text -->
  <div class="absolute top-1/2 left-0 -translate-y-1/2 w-full select-none pointer-events-none opacity-5 overflow-hidden whitespace-nowrap">
    <span class="font-display text-[20vw] leading-none text-foreground">
      {language} {language} {language}
    </span>
  </div>

  <div class="container mx-auto px-4 relative z-10">
    <div class="flex flex-col md:flex-row items-end justify-between gap-6">
      <div class="space-y-4">
        <div class="flex items-center gap-2">
          <span class="inline-block w-3 h-3 bg-primary animate-pulse"></span>
          <span
            class="font-mono text-xs font-bold uppercase tracking-widest text-muted-foreground"
          >
            System Status: Active
          </span>
        </div>

        <h1 class="font-display text-6xl md:text-8xl font-black uppercase tracking-tighter leading-[0.8]">
          {language}
          <span
            class="block text-transparent stroke-text text-4xl md:text-6xl text-primary"
            style="-webkit-text-stroke: 2px currentColor; -webkit-text-fill-color: transparent"
          >
            Formatter
          </span>
        </h1>
      </div>

      <div class="flex flex-col items-end gap-2 text-right">
        {minify && (
          <div class="border-2 border-accent text-accent font-mono text-xs font-bold px-2 py-1 uppercase transform -rotate-2">
            Minification Engine Ready
          </div>
        )}
        <p class="font-serif italic text-lg max-w-md text-muted-foreground border-l-2 border-primary pl-4">
          "Zero-latency processing via WebAssembly. <br />Data never leaves your
          local environment."
        </p>
      </div>
    </div>
  </div>
</section>
