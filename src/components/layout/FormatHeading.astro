---
import { buttonVariants } from "@/components/ui/button";
import LanguageIcon from "@/icons/languages/LanguageIcon.astro";
import { cn } from "@/lib/utils";

interface Props {
  language: string;
  minify: boolean;
}

const { language, minify } = Astro.props;

const languageMap: Record<string, string> = {
  csharp: "C#",
  cpp: "C++",
  c: "C",
  java: "Java",
  javascript: "JavaScript",
  typescript: "TypeScript",
  python: "Python",
  go: "Go",
  rust: "Rust",
  lua: "Lua",
  sql: "SQL",
  html: "HTML",
  css: "CSS",
  json: "JSON",
  xml: "XML",
  yaml: "YAML",
  markdown: "Markdown",
  php: "PHP",
  ruby: "Ruby",
  proto: "Protobuf",
};

const title = languageMap[language] || language;
---

<section class="flex flex-col items-center justify-center pt-8 pb-8 text-center space-y-6 animate-in fade-in zoom-in duration-500">
  <div class="flex flex-col items-center space-y-4">
    <div class="flex items-center gap-3">
      <div class="p-2 rounded-xl bg-muted/50 backdrop-blur-sm border border-border/50 shadow-sm">
        <LanguageIcon icon={language.toLowerCase()} class="w-8 h-8" />
      </div>
      <h1 class="text-3xl font-bold tracking-tight lg:text-4xl bg-clip-text text-transparent bg-gradient-to-r from-foreground to-foreground/70">
        {title} <span class="text-muted-foreground font-normal">Formatter</span>
      </h1>
    </div>
  </div>

  <p class="max-w-[600px] text-base text-muted-foreground md:text-lg leading-relaxed">
    Format, {minify ? "minify" : "beautify"}, and validate your {title} code.
    Secure & client-side.
  </p>
</section>
