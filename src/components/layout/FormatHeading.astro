---
import LanguageIcon from "@/icons/languages/LanguageIcon.astro";

interface Props {
  language: string;
  minify: boolean;
}

const { language, minify } = Astro.props;
---

<div class="relative w-full border-b border-border bg-background py-16 overflow-hidden">
  <!-- Background Decor -->
  <div class="absolute top-0 right-0 p-4 opacity-30 pointer-events-none">
    <LanguageIcon icon={language.toLowerCase()} class="w-64 h-64" />
  </div>

  <div class="container relative z-10 flex flex-col items-start gap-4">
    <div class="flex items-center gap-3">
      <span
        class="bg-primary text-black text-xs font-bold px-2 py-1 uppercase"
      >Tooling // {language}</span>
      {minify && (
        <span
          class="border border-foreground text-foreground text-xs font-bold px-2 py-1 uppercase"
        >Minifier Supported</span>
      )}
    </div>

    <h1 class="text-5xl md:text-7xl font-display font-black text-foreground uppercase leading-[0.9]">
      {language} <span
        class="text-transparent stroke-text"
        style="-webkit-text-stroke: 2px var(--color-foreground)"
      >Formatter</span>
    </h1>

    <p class="max-w-xl text-muted-foreground font-mono text-sm md:text-base border-l-4 border-primary pl-4 py-2">
      High-performance formatting engine. WebAssembly powered. <br />
      Privacy focused: No data leaves your machine.
    </p>
  </div>
</div>
