---
import Moon from "@/icons/moon.astro";
import Sun from "@/icons/sun.astro";
import { scope } from "simple:scope";
import Button from "../ui/button.astro";
---
<RootElement>
  <Button
    id="mode-toggle"
    target={scope("mode-toggle")}
    size="icon"
    class="inline-flex items-center justify-center rounded-md p-2.5 text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:opacity-50 disabled:pointer-events-none ring-offset-background hover:bg-accent hover:text-accent-foreground"
    aria-label="Toggle theme"
  >
    <Sun
      class="h-5 w-5 rotate-0 scale-100 transition-all dark:-rotate-90 dark:scale-0"
    />
    <Moon
      class="absolute h-5 w-5 rotate-90 scale-0 transition-all dark:rotate-0 dark:scale-100"
    />
    <span class="sr-only">Toggle theme</span>
  </Button>
</RootElement>

<script>
RootElement.ready(($) => {
  const modeToggle = $("mode-toggle") as HTMLButtonElement;

  modeToggle.addEventListener("click", () => {
    const isDark = document.documentElement.classList.toggle("dark");
    localStorage.setItem("mode", isDark ? "dark" : "light");
  });
});
</script>
