---
import Icons from "@/icons/Icons.astro";
import Logo from "../../icons/Logo.astro";
import { Navigation } from "./Navigation";
import { ThemeToggle } from "./ThemeToggle";
---

<header class="sticky top-0 z-50 w-full border-b border-border/40 bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60">
  <nav
    class="container flex h-14 items-center justify-between px-4 md:px-8 mx-auto"
    aria-label="Global"
  >
    <div class="flex items-center gap-6">
      <a
        data-astro-prefetch
        href="/"
        class="flex gap-2 items-center hover:opacity-80 transition-opacity"
      >
        <Logo fill="currentColor" class="h-6 w-6 text-primary" />
        <span class="font-bold text-lg hidden sm:inline-block tracking-tight"
        >Happy Formatter</span>
      </a>
      <div class="hidden md:flex h-6 w-px bg-border/60 mx-2"></div>
      <Navigation client:load />
    </div>

    <div class="flex items-center gap-2">
      <a
        href="https://github.com/atlantic/happyformatter"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center justify-center rounded-md text-sm font-medium transition-colors focus-visible:outline-hidden focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50 hover:bg-accent hover:text-accent-foreground h-9 w-9"
      >
        <Icons icon="github" class="h-4 w-4" />
        <span class="sr-only">GitHub</span>
      </a>

      <ThemeToggle client:load />

      <button
        type="button"
        class="lg:hidden inline-flex items-center justify-center rounded-md p-2 hover:bg-accent hover:text-accent-foreground ml-2"
        id="menu-button"
      >
        <span class="sr-only">Open main menu</span>
        <Icons icon="menu" class="h-5 w-5" />
      </button>
    </div>
  </nav>
  <div
    class="lg:hidden hidden border-t"
    role="dialog"
    aria-modal="true"
    id="mobile-menu"
  >
    <div class="fixed inset-0 z-10 bg-background/80 backdrop-blur-xs"></div>
    <div class="fixed inset-y-0 right-0 z-20 w-full overflow-y-auto bg-background px-6 py-6 sm:max-w-sm sm:ring-1 sm:ring-foreground/10">
      <div class="flex items-center justify-between mb-6">
        <a data-astro-prefetch href="/" class="flex gap-2 items-center">
          <Logo class="h-8 w-auto" fill="currentColor" />
          <span class="font-bold text-lg">Happy Formatter</span>
        </a>
        <button type="button" class="rounded-md p-2.5" id="close-menu-button">
          <span class="sr-only">Close menu</span>
          <Icons icon="cross" />
        </button>
      </div>
      <div class="mt-6 flow-root">
        <div class="-my-6 divide-y divide-foreground/10">
          <div class="space-y-2 py-6">
            <a
              data-astro-prefetch
              href="/html"
              class="block rounded-lg px-3 py-2 text-base font-medium hover:bg-muted"
            >HTML Formatter</a>
            <a
              data-astro-prefetch
              href="/css"
              class="block rounded-lg px-3 py-2 text-base font-medium hover:bg-muted"
            >CSS Minifier</a>
            <a
              data-astro-prefetch
              href="/javascript"
              class="block rounded-lg px-3 py-2 text-base font-medium hover:bg-muted"
            >JavaScript Formatter</a>
            <a
              data-astro-prefetch
              href="/typescript"
              class="block rounded-lg px-3 py-2 text-base font-medium hover:bg-muted"
            >Typescript Formatter</a>
            <a
              data-astro-prefetch
              href="/"
              class="block rounded-lg px-3 py-2 text-base font-medium hover:bg-muted"
            >JSON Formatter</a>
            <a
              data-astro-prefetch
              href="/go"
              class="block rounded-lg px-3 py-2 text-base font-medium hover:bg-muted"
            >Go Formatter</a>
            <a
              data-astro-prefetch
              href="/dart"
              class="block rounded-lg px-3 py-2 text-base font-medium hover:bg-muted"
            >Dart Formatter</a>
            <a
              data-astro-prefetch
              href="/lua"
              class="block rounded-lg px-3 py-2 text-base font-medium hover:bg-muted"
            >Lua Formatter</a>
            <a
              data-astro-prefetch
              href="/sql"
              class="block rounded-lg px-3 py-2 text-base font-medium hover:bg-muted"
            >SQL Formatter</a>
            <a
              data-astro-prefetch
              href="/yaml"
              class="block rounded-lg px-3 py-2 text-base font-medium hover:bg-muted"
            >YAML Formatter</a>
            <a
              data-astro-prefetch
              href="/xml"
              class="block rounded-lg px-3 py-2 text-base font-medium hover:bg-muted"
            >XML Formatter</a>
            <a
              data-astro-prefetch
              href="#more-tools"
              class="block rounded-lg px-3 py-2 text-base font-medium hover:bg-muted"
            >More Tools</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>

<script>
const menuButton = document.getElementById("menu-button");
const mobileMenu = document.getElementById("mobile-menu");
const closeMenuButton = document.getElementById("close-menu-button");

if (!menuButton || !mobileMenu || !closeMenuButton) {
  throw new Error("Could not find all elements");
}

menuButton.addEventListener("click", function() {
  mobileMenu.classList.remove("hidden");
  document.body.style.overflow = "hidden";
});

closeMenuButton.addEventListener("click", function() {
  mobileMenu.classList.add("hidden");
  document.body.style.overflow = "";
});
</script>

<script is:inline>
// Default to dark mode
document.documentElement.classList.add("dark");

// Set default theme
document.documentElement.setAttribute("data-theme", "rose-pine");
</script>
