---
interface Props {
  language?: string;
}

const { language = "default" } = Astro.props;
---

<section class="py-20 bg-gradient-to-br from-primary/5 to-accent/5 relative overflow-hidden">
  <!-- Retro Grid Background -->
  <div class="absolute inset-0 bg-[linear-gradient(to_right,#80808008_1px,transparent_1px),linear-gradient(to_bottom,#80808008_1px,transparent_1px)] bg-[size:40px_40px]">
  </div>

  <div class="container mx-auto px-4 relative z-10 max-w-6xl">
    <!-- Main Promotion Container -->
    <div class="border-2 border-foreground bg-card overflow-hidden">
      <!-- Header with Discount Banner -->
      <div class="bg-gradient-to-r from-primary to-accent text-primary-foreground p-6 relative">
        <div class="absolute top-2 right-2">
          <span
            class="bg-accent-foreground text-accent text-xs px-2 py-1 font-mono font-bold animate-pulse"
          >
            New
          </span>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <!-- Left side - Title and Description -->
          <div>
            <div class="flex items-center gap-3 mb-4">
              <span
                class="font-mono text-xs font-bold uppercase tracking-widest opacity-80"
              >Introducing</span>
              <span
                class="bg-accent-foreground/20 text-accent-foreground px-3 py-1 font-mono text-xs font-bold border border-accent-foreground"
              >
                22% OFF - Limited Time - Code: OFF22
              </span>
            </div>

            <h1 class="font-display text-4xl md:text-5xl font-bold uppercase leading-[0.9] mb-4">
              <a
                href="https://leapocr.com?ref=happyformatter"
                class="hover:opacity-80 transition-opacity"
              >LeapOCR</a>
            </h1>

            <p class="font-serif text-xl leading-relaxed opacity-95 mb-6">
              Convert Documents to Markdown & Structured Data with AI-powered
              OCR
            </p>
          </div>

          <!-- Right side - Features -->
          <div class="flex flex-col justify-center space-y-4">
            <div class="flex items-center gap-3 p-3 bg-accent-foreground/10 border border-accent-foreground/20">
              <div class="w-8 h-8 bg-accent text-accent-foreground flex items-center justify-center">
                <span class="font-mono text-xs font-bold">01</span>
              </div>
              <span class="font-mono text-sm font-medium"
              >Invoice Extraction</span>
            </div>

            <div class="flex items-center gap-3 p-3 bg-accent-foreground/10 border border-accent-foreground/20">
              <div class="w-8 h-8 bg-accent text-accent-foreground flex items-center justify-center">
                <span class="font-mono text-xs font-bold">02</span>
              </div>
              <span class="font-mono text-sm font-medium"
              >Handwriting Recognition</span>
            </div>
          </div>
        </div>
      </div>

      <!-- CTA Section -->
      <div class="p-8 bg-background">
        <div class="text-center">
          <div class="mb-6">
            <p class="font-mono text-sm text-muted-foreground mb-4">
              Combine world-class OCR with AI instructions for trusted
              extractions
            </p>
          </div>

          <div class="flex flex-col sm:flex-row items-center justify-center gap-4 mb-6">
            <a
              href="https://leapocr.com?ref=happyformatter"
              class="w-full sm:w-auto bg-primary text-primary-foreground px-8 py-3 font-mono text-sm font-bold border-2 border-foreground hover:bg-foreground hover:text-primary transition-all transform hover:scale-105"
            >
              Start for Free
            </a>
            <a
              href="https://leapocr.com/contact?ref=happyformatter"
              class="w-full sm:w-auto border-2 border-foreground text-foreground px-8 py-3 font-mono text-sm font-bold hover:bg-foreground hover:text-background transition-all transform hover:scale-105"
            >
              Book a Demo
            </a>
          </div>

          <!-- Technical Spec -->
          <div class="border border-foreground/20 p-4 inline-block">
            <div class="font-mono text-xs text-muted-foreground">
              <span class="text-primary">$</span> leapOCR activate
              --intelligence --scale --trust
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
