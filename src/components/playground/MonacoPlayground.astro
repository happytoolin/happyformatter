---
interface Props {
  inputCode: string;
  language: string;
}

const { inputCode, language } = Astro.props;
---

<style>
:root {
  --monaco-transition-duration: 0.3s;
  --skeleton-loader-bar-width: 12rem;
}
</style>

<div
  class="transition-none w-full h-full"
  style="color-scheme: inherit"
  data-language={language}
  data-initial-code={inputCode}
  id="monaco-playground"
  data-astro-transition-persist="monaco-playground"
>
  <div
    id="skeleton-loader"
    class="bg-slate-900 rounded-lg border border-slate-800 flex items-center justify-center relative overflow-hidden w-full h-full"
    role="progressbar"
    aria-label="Loading code editor"
    aria-busy="true"
  >
    <div class="absolute inset-0 bg-grid-pattern opacity-5"></div>

    <div class="relative z-10">
      <div
        class="relative bg-slate-800 rounded-full overflow-hidden mb-8 mx-auto"
        style={`width: var(--skeleton-loader-bar-width); height: 2px`}
      >
        <div class="absolute inset-0 bg-white rounded-full animate-slide"></div>
        <div class="absolute inset-0 bg-white rounded-full blur-sm animate-slide">
        </div>
      </div>

      <div class="text-center space-y-2">
        <h3 class="text-xl font-semibold text-white">
          Loading
        </h3>
        <p class="text-gray-500 text-sm">Preparing your workspace...</p>
      </div>

      <div class="absolute top-20 left-10 w-1 h-1 bg-gray-600 rounded-full opacity-40 animate-float-up">
      </div>
      <div
        class="absolute top-40 right-10 w-1 h-1 bg-gray-600 rounded-full opacity-40 animate-float-up"
        style="animation-delay: 1s"
      >
      </div>
      <div
        class="absolute bottom-32 left-20 w-1 h-1 bg-gray-600 rounded-full opacity-40 animate-float-up"
        style="animation-delay: 2s"
      >
      </div>
    </div>
  </div>

  <monaco-editor
    id="monaco-editor"
    style={`width: 100%; height: 100%; visibility: hidden; opacity: 0; transition: opacity var(--monaco-transition-duration) ease-in-out, visibility var(--monaco-transition-duration) ease-in-out`}
    line-numbers="on"
    fontFamily="Geist Mono"
    fontSize="14"
    data-astro-transition-persist="monaco-editor"
  ></monaco-editor>
</div>

<script>
import { createMonacoSingleton, exposeMonacoAPI } from "@/lib/monaco-singleton";

const monacoPlayground = createMonacoSingleton();

monacoPlayground.ensureInitialized().then(() => {
  exposeMonacoAPI();
}).catch((error) => {
  console.error("[Monaco] Failed to initialize:", error);
});
</script>
