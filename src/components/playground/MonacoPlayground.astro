---
interface Props {
  inputCode: string;
  language: string;
}

const { inputCode, language } = Astro.props;
---

<div
  class="transition-none"
  style="color-scheme: inherit"
  data-language={language}
  data-initial-code={inputCode}
  id="monaco-playground"
  data-astro-transition-persist="monaco-playground"
>
  <!-- Minimal loading state -->
  <div
    id="skeleton-loader"
    class="bg-slate-900 rounded-lg border border-slate-800 flex items-center justify-center relative overflow-hidden"
    style="height: 800px"
  >
    <!-- Subtle animated background grid -->
    <div class="absolute inset-0 bg-grid-pattern opacity-5"></div>

    <div class="relative z-10">
      <!-- Clean loading line -->
      <div class="relative w-48 h-0.5 bg-slate-800 rounded-full overflow-hidden mb-8 mx-auto">
        <div class="absolute inset-0 bg-white rounded-full animate-slide"></div>
        <div class="absolute inset-0 bg-white rounded-full blur-sm animate-slide"></div>
      </div>

      <!-- Simple text -->
      <div class="text-center space-y-2">
        <h3 class="text-xl font-semibold text-white">
          Loading
        </h3>
        <p class="text-gray-500 text-sm">Preparing your workspace...</p>
      </div>

      <!-- Subtle floating dots -->
      <div class="absolute top-20 left-10 w-1 h-1 bg-gray-600 rounded-full opacity-40 animate-float-up"></div>
      <div class="absolute top-40 right-10 w-1 h-1 bg-gray-600 rounded-full opacity-40 animate-float-up" style="animation-delay: 1s;"></div>
      <div class="absolute bottom-32 left-20 w-1 h-1 bg-gray-600 rounded-full opacity-40 animate-float-up" style="animation-delay: 2s;"></div>
    </div>
  </div>

  <monaco-editor
    id="monaco-editor"
    style="width: 100%; height: 800px; visibility: hidden; opacity: 0; transition: opacity 0.3s ease-in-out, visibility 0.3s ease-in-out"
    line-numbers="on"
    fontFamily="Geist Mono"
    fontSize="16"
    theme="vitesse-dark"
    data-astro-transition-persist="monaco-editor"
  ></monaco-editor>
</div>

<script>
import { createMonacoSingleton, exposeMonacoAPI } from "@/lib/monaco-singleton";

// Create or reuse the Monaco singleton
const monacoPlayground = createMonacoSingleton();

// Initialize and then expose API globally for the formatter component
monacoPlayground.ensureInitialized().then(() => {
  exposeMonacoAPI();
});
</script>
