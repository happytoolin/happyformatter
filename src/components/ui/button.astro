---
import { cn } from "@/lib/utils";

// Define the button variants and sizes
const buttonVariants = {
  default:
    "bg-primary text-primary-foreground hover:translate-y-[2px] hover:shadow-none shadow-[4px_4px_0px_0px_rgba(0,0,0,1)]",
  destructive:
    "bg-destructive text-destructive-foreground hover:bg-destructive/90 shadow-[4px_4px_0px_0px_rgba(0,0,0,1)]",
  outline:
    "border-2 border-input bg-background hover:bg-accent hover:text-accent-foreground shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] hover:translate-y-[2px] hover:shadow-none",
  secondary: "bg-secondary text-secondary-foreground hover:bg-secondary/80",
  ghost: "hover:bg-accent hover:text-accent-foreground",
  link: "text-primary underline-offset-4 hover:underline",
};

const buttonSizes = {
  default: "h-12 px-6 py-2",
  sm: "h-9 rounded-none px-3",
  lg: "h-14 rounded-none px-10 text-base",
  icon: "h-12 w-12",
};

interface Props {
  variant?: keyof typeof buttonVariants;
  size?: keyof typeof buttonSizes;
  className?: string;
  children?: any;
  target?: string;
  [key: string]: any;
}

function getButtonClasses({
  variant = "default",
  size = "default",
  className = "",
}: Props) {
  return cn(
    "inline-flex items-center justify-center whitespace-nowrap rounded-none text-sm font-bold uppercase tracking-wide transition-all focus-visible:outline-hidden disabled:pointer-events-none disabled:opacity-50 active:translate-y-[4px] active:shadow-none border-2 border-black",
    buttonVariants[variant],
    buttonSizes[size],
    className,
  );
}

const props = Astro.props as Props;
const { variant, size, className, target, ...restProps } = props;
---

<button
  class={getButtonClasses({ variant, size, className })}
  {...restProps}
  data-target={target}
>
  <slot />
</button>
