---
import { cn } from "@/lib/utils";

interface Props {
  class?: string;
  children?: any;
  target?: string;
  [key: string]: any;
}

const props = Astro.props as Props;

function getTextAreaClasses(props: Props) {
  return cn(
    "flex min-h-[80px] w-full rounded-md border border-input bg-background ring-offset-background placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50",
    props.class,
  );
}
---

<textarea
  class={getTextAreaClasses(props)}
  {...props}
  data-target={props.target}
></textarea>
