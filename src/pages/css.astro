---
import { FAQ } from "@/components/faq/faq";
import Info from "@/components/info/info.astro";
import Layout from "@/components/layout/layout.astro";
import MonacoFormatter from "@/components/playground/MonacoFormatter.astro";
---

<Layout
  title="CSS Formatter and Minifier"
  description="CSS Formatter that formats CSS data and minifies it, locally in your browser"
  language="css"
  minify={true}
>
  <MonacoFormatter minifier={true} language="css" />
  <Info language="css" />
  <FAQ language="css" client:idle />
</Layout>
