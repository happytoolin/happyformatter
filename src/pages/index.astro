---
import { FAQ } from "@/components/faq/faq";
import Info from "@/components/info/info.astro";
import Layout from "@/components/layout/layout.astro";
import LeapOCR from "@/components/leapocr/LeapOCR.astro";
import Formatter from "@/components/playground/Formatter";
import { LANGUAGES } from "@/lib/languages";

const language = "json";
const languageConfig = LANGUAGES[language];

const homepageTitle =
  "Online Code Formatter & Minifier - 22+ Languages | Free HAPPYFMT";
const homepageDescription =
  "Free online code formatter and beautifier for 22+ programming languages. Format, validate, and minify code online. Privacy-focused, client-side processing.";
const homepageKeywords =
  "online code formatter, code minifier, free code formatter, format code online, code beautifier, web formatter, code formatting tool, programmer tools, developer tools";
---

<Layout
  title={homepageTitle}
  description={homepageDescription}
  language={language}
  minify={languageConfig.minify}
  keywords={homepageKeywords}
>
  <Formatter
    client:load
    minifier={languageConfig.minify}
    language={language}
  />
  <LeapOCR language={language} />
  <Info language={language} />
  <FAQ language={language} client:idle />
</Layout>
