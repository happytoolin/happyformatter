---
import { FAQ } from "@/components/faq/faq";
import Info from "@/components/info/info.astro";
import Layout from "@/components/layout/layout.astro";
import Formatter from "@/components/playground/Formatter";
---

<Layout
  title="YAML Formatter and Minifier"
  description="YAML Formatter that formats YAML data and minifies it, locally in your browser"
  language="yaml"
  minify={true}
>
  <Formatter client:load minifier={false} language="yaml" />
  <Info language="yaml" />
  <FAQ language="yaml" client:idle />
</Layout>
